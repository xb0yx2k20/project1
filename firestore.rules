rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    function isSignedIn() { return request.auth != null; }

    // Публичные справочники (если нужны): сейчас не используются
    match /serviceCenters/{id} {
      allow read: if true;
      allow write: if request.auth != null; // временно для сидов
    }
    match /services/{id} {
      allow read: if true;
      allow write: if request.auth != null; // временно для сидов
    }

    // Пользовательские данные
    match /users/{userId} {
      allow read, write: if isSignedIn() && userId == request.auth.uid;

      match /vehicles/{vehicleId} {
        allow read, write: if isSignedIn() && userId == request.auth.uid;

        match /maintenanceRecords/{recordId} {
          allow read, write: if isSignedIn() && userId == request.auth.uid;
        }
      }
    }
  }
}